{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "build",
    "removeComments": true,
    "skipLibCheck": true,
    "paths": {
      "@root/*": [
        "./*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@v1/*": [
        "v1/*"
      ]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "include": [
    "src/**/*",
    "src/types.ts",
  ],
  "exclude": [
    "node_modules",
    "*/node_modules/**"
  ]
}